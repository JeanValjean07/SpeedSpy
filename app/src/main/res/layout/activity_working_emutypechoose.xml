<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:background="@android:color/transparent"
    android:padding="0dp">

    <View
        android:id="@+id/topArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/mainCard"
        android:elevation="0dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/noticeCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        app:cardElevation="10dp"
        app:cardCornerRadius="50dp"
        android:backgroundTint="@color/Background3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textColorHint="@color/ButtonText"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="动态提示文本区域"
            android:textColor="@color/HeadText"
            android:textSize="12sp"
            />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/Background3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardElevation="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!-- 选车卡片标题 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="选择车辆类型"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="25dp"
                    android:textColor="@color/HeadText"
                    android:layout_weight="0" />
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/buttonExit"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_exit_2"/>

            </LinearLayout>
            <!-- 手动填写计算区域长度 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/Background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!-- 提示词和放置区 -->
                    <LinearLayout
                        android:layout_width="230dp"
                        android:layout_height="30dp"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">
                        <LinearLayout
                            android:id="@+id/linear3"
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            android:textColor="@android:color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="27dp"
                                android:textColor="@color/HeadText"
                                android:text="手动填写计算区域长度"
                                android:layout_marginEnd="15dp"
                                android:gravity="center"
                                android:textSize="10sp"
                                />
                            <TextView
                                android:id="@+id/gap1"
                                android:layout_width="match_parent"
                                android:textColor="@color/HeadText"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text=""
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 按钮 -->
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical">
                        <com.google.android.material.button.MaterialButton
                            app:cornerRadius="5dp"
                            android:id="@+id/buttonManualSet"
                            android:layout_width="60sp"
                            android:layout_height="27dp"
                            android:text="填写"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/ButtonText"
                            android:backgroundTint="@color/ButtonBg"
                            android:padding="0dp"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <!-- 跳转网站查询 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/Background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <!-- 提示词和放置区 -->
                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            android:textColor="@android:color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="27dp"
                                android:textColor="@color/HeadText"
                                android:text="信息查询网站"
                                android:layout_marginEnd="15dp"
                                android:gravity="center"
                                android:textSize="10sp"
                                />
                            <TextView
                                android:layout_width="wrap_content"
                                android:textColor="@color/HeadText"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text="https://china-emu.cn/Trains/ALL/"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <!-- 按钮 -->
                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical">
                        <com.google.android.material.button.MaterialButton
                            app:cornerRadius="5dp"
                            android:id="@+id/buttonGoWeb"
                            android:layout_width="60sp"
                            android:layout_height="27dp"
                            android:text="跳转"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/ButtonText"
                            android:backgroundTint="@color/ButtonBg"
                            android:padding="0dp"
                            />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>


            <!-- 图片显示区和画板 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="420dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/Background2"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.github.chrisbanes.photoview.PhotoView
                                android:id="@+id/photoView1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:src="@drawable/ruler"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                            <com.suming.speedspy.DrawToolActivity
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"
                        app:cardBackgroundColor="@color/Background2"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="1dp">
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.github.chrisbanes.photoview.PhotoView
                                android:id="@+id/photoView2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop" />
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:src="@drawable/ruler"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />
                            <com.suming.speedspy.DrawToolActivity
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </FrameLayout>
            <!-- 信息区域 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/Background"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">
                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            android:textColor="@android:color/black"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:text="标记点1"
                                android:textColor="@color/HeadText"
                                android:layout_marginEnd="15dp"
                                android:textSize="10sp"
                                />
                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:textColor="@color/HeadText"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text=""
                                android:textSize="10sp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/linear1"
                            app:layout_constraintStart_toStartOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginEnd="15dp"
                                android:textColor="@color/HeadText"
                                android:text="标记点2"
                                android:textSize="10sp"
                                />
                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:textColor="@color/HeadText"
                                android:layout_height="20dp"
                                android:gravity="center"
                                android:text=""
                                android:textSize="10sp"
                                />

                        </LinearLayout>





                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="43dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical">
                        <com.google.android.material.button.MaterialButton
                            app:cornerRadius="5dp"
                            android:id="@+id/buttonCalculate"
                            android:layout_width="60sp"
                            android:layout_height="27dp"
                            android:text="计算"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/ButtonText"
                            android:backgroundTint="@color/ButtonBg"
                            android:padding="0dp"
                            />



                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- 结果区域 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                app:cardBackgroundColor="@color/Background"
                android:visibility="gone"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:ignore="MissingConstraints">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="27dp"
                            android:layout_marginStart="10dp"
                            android:orientation="horizontal"
                            app:layout_constraintTop_toBottomOf="@+id/linear1"
                            app:layout_constraintStart_toStartOf="parent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="27dp"
                                android:layout_marginEnd="15dp"
                                android:textColor="@color/HeadText"
                                android:text="最终计算结果"
                                android:gravity="center"
                                android:textSize="10sp"
                                />
                            <TextView
                                android:id="@+id/finalValue"
                                android:layout_width="match_parent"
                                android:textColor="@color/HeadText"
                                android:layout_height="20dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text=""
                                android:textSize="10sp"
                                />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="27dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="vertical">
                        <com.google.android.material.button.MaterialButton
                            app:cornerRadius="5dp"
                            android:id="@+id/buttonUseThisValue"
                            android:layout_width="60sp"
                            android:layout_height="27dp"
                            android:text="应用此值"
                            android:layout_gravity="center"
                            android:textSize="10sp"
                            android:textColor="@color/ButtonText"
                            android:backgroundTint="@color/ButtonBg"
                            android:padding="0dp"
                            />



                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>